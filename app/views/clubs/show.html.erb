<p id="notice"><%= notice %></p>

<h1><%= @club.name %></h1>

<% if @club.book.present? %>
  <h2>Book info</h2>
  <h3>Title: <i><%= @club.book.title %></i></h3>
  <h3>Author: <%= @club.book.author %></h3>
  <% if @club.book.description.present? %>
    <p><%= @club.book.description %></p>
  <% end %>
  <%# else: link to add a book %>
<% end %>

<h2>Members</h2>
<ul>
  <% @club.members.each do |member| %>
    <li><%= member.name %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_club_path(@club) %> |
<%= link_to 'Back', clubs_path %>
